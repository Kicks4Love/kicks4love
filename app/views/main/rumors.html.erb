<% content_for :head do %>
    <%= stylesheet_link_tag "rumors.css" %>
<% end %>

<%= hidden_field_tag "page_source", "rumors" %>

<div class="main container">
	<div class="header">
        <header><%= t("Rumors") %></header>
        <div class="sub-header"><%= t("Comprehensive_Rumor_All_In_One_View") %></div>
    </div>
    <div class="content">
    	<% @rumors_posts.each_with_index do |rumors_post, index| %>
    		<%  
    			if index%3 == 0
    				border_class = "left-lg-none left-sm-none"
    			elsif index%2 == 0
    				border_class = "left-sm-none"
    			else
    				border_class = ""
    			end
    		%>
	        <div class="collumn <%= border_class %> col-xs-12 col-sm-6 col-lg-4">
	            <div class="head">
	                <span class="headline title"><%= rumors_post.title %></span>
	                <p>
	                    <span class="headline sub-title"><%= rumors_post.created_at.strftime("%Y-%m-%d") %></span>
	                </p>
	            </div>
	            <p><%= ActionView::Base.full_sanitizer.sanitize(rumors_post.content[0])[0..200] %>...</p>
	            <div class="photo" style="background-image:url('<%= rumors_post.cover_image.url %>')"></div>
	        </div>
	    <% end %>
    </div>
    <div class="pagination-container">
    	<%= will_paginate @rumors_posts, :previous_label => t("Prev_Page"), :next_label => t("Next_Page") %>
    </div>
</div>

<% content_for :end_of_body do %>
    <%= javascript_include_tag "rumors.js" %>
<% end %>