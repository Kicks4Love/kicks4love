<h1>Admin Users</h1>

<hr/>

<% if @admin_users.any? %>
<%= link_to "New on court post", new_admin_user_registration_path, :class => "btn btn-primary" %>

<br/><br/>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title (English)</th>
            <th>中文标题 </th>
            <th>Content (English)</th>
            <th>文章内容（中文）</th>
            <th>Cover Image</th>
            <th>Main Image</th>
            <th></th>
        </tr>
    </thead>
  <tbody>
      <% @on_court_posts.each do |post| %>
        <tr>
            <td><%= post.title_en %></td>
            <td><%= post.title_cn %></th>
            <td><%= post.content_en %></td>
            <td><%= post.content_cn %></td>
            <td><%= image_tag "on_court_post/#{post.cover_image}", :height => "50px"%></td>
            <td><%= image_tag "on_court_post/#{post.main_image}", :height => "50px"%></td>
            <td>
                <%= link_to "Edit", edit_admin_on_court_post_path(post), :class => "btn btn-primary" %>
                <%= link_to "Delete", admin_on_court_post_path(post), :data => {:confirm => 'Are you sure to delete this post?'}, :method => :delete, :class => "btn btn-danger" %>
            </td>
        </tr>
      <% end %>
    </tbody>
</table>

<% else %>
    <h2>No admin user exist</h2>
    <% if current_admin_user.root_user? %>
        <%= link_to "Create a new admin user now", new_admin_user_registration_path, :class => "btn btn-primary" %>
    <% end %>
<% end %>

<br/><br/>

<p><%= link_to "Back", admin_root_path %></p>