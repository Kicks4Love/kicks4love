<% content_for :head do %>
    <%= stylesheet_link_tag "contact.css" %>
<% end %>

<%= hidden_field_tag "page_source", "contact" %>

<div class="main container">
    <div class="kicks-contact">
        <div class="kicks-contact-row header">
            <h1><%= t("Contact_Us") %> &nbsp;</h1>
            <h3>Fill out the form below to let us know your concern!</h3>
        </div>
        <div class="kicks-contact-row body">
            <form action="#">
                <ul> 
                    <li>
                        <p class="left">
                            <label for="first_name">first name</label>
                            <input type="text" name="first_name" placeholder="John" />
                        </p>
                        <p class="pull-right">
                            <label for="last_name">last name</label>
                            <input type="text" name="last_name" placeholder="Smith" />      
                        </p>
                    </li>
                    <li>
                        <p>
                            <label for="email">email <span class="req">*</span></label>
                            <input type="email" name="email" placeholder="john.smith@gmail.com" />
                        </p>
                    </li>        
                    <li><div class="divider"></div></li>
                    <li>
                        <label for="comments">comments</label>
                        <textarea cols="46" rows="3" name="comments"></textarea>
                    </li>
                    <li>
                        <input class="btn btn-submit" type="submit" value="Submit" />
                        <small>or press <strong>enter</strong></small>
                    </li> 
                </ul>
            </form>  
        </div>
    </div>
</div>

<% content_for :end_of_body do %>
    <%= javascript_include_tag "contact.js" %>
<% end %>