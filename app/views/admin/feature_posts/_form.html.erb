<style>
	.content-form {
		min-width: 500px;
		min-height: 200px;
	}
</style>
<div class="row no-margin">
	<div class="col-sm-2">
		<label>Title (English):</label>
	</div>
	<div class="col-sm-2">
		<%= form.text_field :title_en %>
	</div>
</div>
<br>
<div class="row no-margin">
	<div class="col-sm-2">
		<label>中文标题:</label>
	</div>
	<div class="col-sm-2">
		<%= form.text_field :title_cn %>
	</div>
</div>
<br>
<div class="row no-margin">
	<div class="col-sm-2">
		<label>Content (English):</label>
	</div>
	<div class="col-sm-2">
		<%= form.text_area :content_en, :class => "content-form", :value => @feature_post.content_en.join("\n"), :title => "Different paragraph in different line" %>
	</div>
</div>
<br>
<div class="row no-margin">
	<div class="col-sm-2">
		<label>文章内容 (中文):</label>
	</div>
	<div class="col-sm-2">
		<%= form.text_area :content_cn, :class => "content-form", :value => @feature_post.content_cn.join("\n"), :title => "Different paragraph in different line" %>
	</div>
</div>
<br>
<div class="row no-margin">
	<div class="col-sm-2">
		<label>Number of Paragraphs (En/Cn):</label>
	</div>
	<div id="number-paragraph" class="col-sm-2"></div>
</div>
<br>
<div class="row no-margin">
	<div class="col-sm-2">
		<label>Cover Image:</label>
	</div>
	<div class="col-sm-2">
		<%= form.file_field :cover_image %>
	</div>
</div>
<br>
<div class="row no-margin">
	<div class="col-sm-2">
		<label>Main Images:</label>
	</div>
	<div class="col-sm-2">
		<%= form.file_field :main_images, multiple: true %>
	</div>
</div>
<br>
<div class="row no-margin">
	<% if @feature_post.main_images.count > 0 %>
		<label>
    		<%= form.check_box :remove_main_images %> Remove current images
		</label>
	<% end %>
</div>
<br>
<div class="row no-margin">
	<div class="col-sm-2">
		<label>Main Images Number:</label>
	</div>
	<div id="number-image" class="col-sm-2"><%= @feature_post.main_images.count %></div>
</div>
<br>
<div class="row no-margin">
	<div class="col-sm-2">
		<label>Post Composition:</label>
	</div>
	<div id="post-composition" class="col-sm-2">
		<% @feature_post.main_images.each do |main_image| %>
			<%= hidden_field_tag nil, main_image.file.identifier, {:class => "main-images", :'data-type' => "image"} %>
		<% end %>
		<%= hidden_field_tag nil, @feature_post.post_composition.to_json, {:id => "post-composition-json"} %>
		<table>
		</table>
	</div>
</div>
<br>
<%= form.submit "Submit", :class => "btn btn-primary" %>
