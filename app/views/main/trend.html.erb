<% content_for :head do %>
    <%= stylesheet_link_tag "trend.css" %>
<% end %>

<%= hidden_field_tag "page_source", "trend" %>

<div class="main container">
    <div class="kicks-title">
        <div><%= t("Trend") %></div>
    </div>
    <!-- maximum should be three only (more will be loaded by ajax) -->
    <% @all_trend_posts.each_with_index do |trend_post, index| %>
        <div class="kicks-box clearfix<%=' last' if index == @all_trend_posts.size-1%>">
            <dl class="col-xs-12 col-sm-4">
                <dt>
                    <img src="<%= trend_post.cover_image.url %>" class="kicks-pic"/>
                </dt>
                <dd>
                    <a href="/trend/<%= trend_post.id %>"><%= trend_post.title %></a>
                </dd>
            </dl>
            <div class="col-xs-12 col-sm-8 kicks-intro">
                <h2><%= trend_post.title %></h2>
                <div class="kicks-intro-content">
                    <span><%= trend_post.content %></span>
                </div>
            </div>
        </div>
    <% end %>
    <% unless @all_trend_posts.total_pages == @all_trend_posts.current_page %>
        <div class="to-view-more">
            <span><%= t("Click_to_view_more") %></span>
        </div>
    <% end %>
    <%= hidden_field_tag "next_page", "2", :name => nil %>
</div>

<% content_for :end_of_body do %>
    <%= javascript_include_tag "trend.js" %>
<% end %>
