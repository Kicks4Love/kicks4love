<% content_for :head do %>
    <%= stylesheet_link_tag "show.css" %>
<% end %>

<article class="main container">
  <header>
    <span class="category"><i class="fa fa-tags" aria-hidden="true"></i><%= @category %></span>
    <h1><%= @page_title %></h1>
    <div class="meta">
      <span class="author"><%= t("by") %> <i class="author-name">Kicks4Love鞋侣</i></span>
      <span class="pub-date"><%= "#{t("posted")} #{@oncourt_post.created_at.strftime("%Y-%m-%d")}" %></span>
    </div>
  </header>
  <% @times.times do |i|%>
    <% unless @content[i].nil? %>
      <p><%= @content[i] %></p>
    <% end %>
    <% unless @oncourt_post.main_images[i].nil? %>
      <figure>
        <%= image_tag @oncourt_post.main_images[i].url %>
      </figure>  
    <% end %>
  <% end %>
  <%= render "share" %>
</article>

<% content_for :end_of_body do %>
    <%= javascript_include_tag "show.js" %>
<% end %>