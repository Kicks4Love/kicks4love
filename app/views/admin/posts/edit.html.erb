<h1>Edit <%= @post.post_type.titleize %></h1>

<hr/><br/>

<%= form_for @post, :url => admin_post_path(@post), :method => :PUT do |f| %>
	<%= render :partial => "form", :locals => {:form => f} %>
<% end %>

<br/>

<%= link_to "Back", admin_posts_path, :class => "btn btn-default" %> 

<% content_for :end_of_body do %>
    <%= javascript_include_tag "admin/posts.js" %>
<% end %>