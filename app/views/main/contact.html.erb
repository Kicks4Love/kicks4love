<% content_for :head do %>
    <%= stylesheet_link_tag "contact.css" %>
<% end %>

<%= hidden_field_tag "page_source", "contact" %>

<div class="main container">
    <div class="kicks-contact">
        <div class="kicks-contact-row header">
            <h1><%= t("Contact_Us") %> &nbsp;</h1>
            <h3><%= t("contact_us_message") %></h3>
        </div>
        <div class="kicks-contact-row body">
            <%= form_tag url_for(:controller => "main", :action => "send_contact_us"), :id => "contact-form", :method => "post" do %>
                <ul> 
                    <li>
                        <p class="left">
                            <label for="first_name"><%= @contact_placeholder[:first_name_label] %></label>
                            <input type="text" name="first_name" placeholder="<%= @contact_placeholder[:first_name_placeholder] %>" />
                        </p>
                        <p class="pull-right">
                            <label for="last_name"><%= @contact_placeholder[:last_name_label] %></label>
                            <input type="text" name="last_name" placeholder="<%= @contact_placeholder[:last_name_placeholder] %>" />      
                        </p>
                    </li>
                    <li>
                        <p>
                            <label for="email"><%= @contact_placeholder[:email_label] %> <span class="req">*</span></label>
                            <input type="email" name="email" placeholder="<%= @contact_placeholder[:email_placeholder] %>" required/>
                        </p>
                    </li>        
                    <li><div class="divider"></div></li>
                    <li>
                        <label for="comments"><%= @contact_placeholder[:comments_label] %> <span class="req">*</span></label>
                        <textarea cols="46" rows="3" name="comments" required></textarea>
                    </li>
                    <li>
                        <%= submit_tag t("Submit"), :class => "btn btn-submit" %>
                        <small><%= raw @contact_placeholder[:enter_message] %></small>
                    </li> 
                </ul>
            <% end %>  
        </div>
    </div>
</div>

<% content_for :end_of_body do %>
    <%= javascript_include_tag "contact.js" %>
<% end %>